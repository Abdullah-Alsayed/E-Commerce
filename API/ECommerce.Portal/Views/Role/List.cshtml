@using ECommerce.BLL.Features.Roles.Dtos
@using ECommerce.BLL.Features.Roles.Requests
@using ECommerce.DAL.Enums
@{
    ViewData["Title"] = "Role List";
}
@inject IStringLocalizer<AccountController> _Localizer;
@inject ILocalizationManger _localizationManger;

@section VendorStyles {
}

@* ************** Content ************** *@
<h1 class="py-3 mb-4">
    @_Localizer["RolesList"]
</h1>

<div class="d-flex justify-content-end">
    <div class="mb-3">
        <button class="btn btn-secondary create-new btn-primary" tabindex="0" aria-controls="DataTables_Table_0" data-bs-toggle="modal" data-bs-target="#CreateFormModal" type="button">
            <span>
                <span class="mdi mdi-plus"></span>
                <span class="d-none d-lg-inline-block">@_Localizer[nameof(OperationTypeEnum.Create)] @_Localizer[nameof(EntitiesEnum.Role)]</span>
            </span>
        </button>
    </div>
</div>

<div class="card">
    <div class="card-datatable table-responsive pt-0">
        <table id="RoleList" class="datatables-basic table table-hover table-responsive">
            <thead>
                <tr>
                    <th>@_Localizer[Constants.EntityKeys.NameAR]</th>
                    <th>@_Localizer[Constants.EntityKeys.NameEn]</th>
                    <th>@_Localizer[Constants.EntityKeys.Description]</th>
                    <th>@_Localizer[Constants.EntityKeys.CreatedAt]</th>
                    <th>@_Localizer[Constants.LabelKeys.Permission]</th>
                    <th>@_Localizer[Constants.LabelKeys.Action]</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal to add new record -->
<div class="modal fade" id="CreateFormModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">@_Localizer[nameof(OperationTypeEnum.Create)] @_Localizer[nameof(EntitiesEnum.Role)]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="needs-validation" id="CreateForm" novalidate>
                <div class="modal-body">
                    <div class="form-floating form-floating-outline mb-3">
                        <input type="text" class="form-control" name="@nameof(CreateRoleRequest.Name)" id="@nameof(CreateRoleRequest.Name)" placeholder="@_Localizer[Constants.EntityKeys.NameAR]" required />
                        <label for="@nameof(CreateRoleRequest.Name)">@_Localizer[Constants.EntityKeys.NameAR]</label>
                        <div class="invalid-feedback">@_Localizer[Constants.EntityKeys.NameAR] @_Localizer[Constants.MessageKeys.IsRequired]</div>
                    </div>
                    <div class="form-floating form-floating-outline mb-3">
                        <input type="text" class="form-control" name="@nameof(CreateRoleRequest.NameEn)" id="@nameof(CreateRoleRequest.NameEn)" placeholder="@_Localizer[Constants.EntityKeys.NameEn]" required />
                        <label for="@nameof(CreateRoleRequest.NameEn)">@_Localizer[Constants.EntityKeys.NameEn]</label>
                        <div class="invalid-feedback">@_Localizer[Constants.EntityKeys.NameEn] @_Localizer[Constants.MessageKeys.IsRequired]</div>
                    </div>
                    <div class="form-floating form-floating-outline mb-3">
                        <textarea type="text" class="form-control" name="@nameof(CreateRoleRequest.Description)" id="@nameof(CreateRoleRequest.Description)" placeholder="@_Localizer[Constants.EntityKeys.Description]"></textarea>
                        <label for="@nameof(CreateRoleRequest.Description)">@_Localizer[Constants.EntityKeys.Description]</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@_Localizer[Constants.LabelKeys.Close]</button>
                    <button type="submit" class="btn btn-primary" onclick="submitFormData('#CreateForm', 'Role', 'Create', 'RoleList',event)">@_Localizer["SaveChanges"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal to Update new record -->
<div class="modal fade" id="UpdateFormModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">@_Localizer[nameof(OperationTypeEnum.Update)] @_Localizer[nameof(EntitiesEnum.Role)]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="d-flex justify-content-center">
                <div class="spinner-border m-5 d-none" role="status" id="UpdateForm-spinner">
                    <span class="visually-hidden"></span>
                </div>
            </div>
            <form class="needs-validation" id="UpdateForm" novalidate>
                <input type="hidden" id="updateRecordId" name="Id">
                <div class="modal-body">
                    <div class="form-floating form-floating-outline mb-3">
                        <input type="text" class="form-control" name="@nameof(UpdateRoleRequest.Name)" id="@nameof(UpdateRoleRequest.Name)" placeholder="@_Localizer[Constants.EntityKeys.NameAR]" required />
                        <label for="@nameof(UpdateRoleRequest.Name)">@_Localizer[Constants.EntityKeys.NameAR]</label>
                        <div class="invalid-feedback">@_Localizer[Constants.EntityKeys.NameAR] @_Localizer[Constants.MessageKeys.IsRequired]</div>
                    </div>
                    <div class="form-floating form-floating-outline mb-3">
                        <input type="text" class="form-control" name="@nameof(UpdateRoleRequest.NameEn)" id="@nameof(UpdateRoleRequest.NameEn)" placeholder="@_Localizer[Constants.EntityKeys.NameEn]" required />
                        <label for="@nameof(UpdateRoleRequest.NameEn)">@_Localizer[Constants.EntityKeys.NameEn]</label>
                        <div class="invalid-feedback">@_Localizer[Constants.EntityKeys.NameEn] @_Localizer[Constants.MessageKeys.IsRequired]</div>
                    </div>
                    <div class="form-floating form-floating-outline mb-3">
                        <textarea type="text" class="form-control" name="@nameof(UpdateRoleRequest.Description)" id="@nameof(UpdateRoleRequest.Description)" placeholder="@_Localizer[Constants.EntityKeys.Description]"></textarea>
                        <label for="@nameof(UpdateRoleRequest.Description)">@_Localizer[Constants.EntityKeys.Description]</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@_Localizer[Constants.LabelKeys.Close]</button>
                    <button type="submit" class="btn btn-primary" onclick="submitFormData('#UpdateForm', 'Role', 'Update', 'RoleList',event)">@_Localizer["SaveChanges"]</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal to Delete new record -->
<div class="modal fade" id="DeleteRecord" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">@_Localizer[nameof(OperationTypeEnum.Delete)] @_Localizer[nameof(EntitiesEnum.Role)]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="deleteRecordId">
                <h5>@_Localizer["DeleteModalMessage"]</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@_Localizer[Constants.LabelKeys.Close]</button>
                <button type="submit" class="btn btn-danger" id="deleteRecordButton" onclick="DeleteRecord('Role','Delete','RoleList')">@_Localizer["Delete"]</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal to Update permission -->
<div class="modal fade" id="UpdatePermission" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">@_Localizer[nameof(OperationTypeEnum.Update)] @_Localizer[Constants.LabelKeys.Permission]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-4">
                    <div class="card-body" id="UpdatePermissionBody">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">@_Localizer[Constants.LabelKeys.Close]</button>
                <button type="submit" id="submitPermissionButton" class="btn btn-primary" onclick="submitPermissionForm()">@_Localizer["Update"]</button>
            </div>
        </div>
    </div>
</div>

@section VendorScripts {
    <!-- Custom -->
    <script src="~/vendor/js/Role.js"></script>
}

@section PageScripts {
    <script>
        var tableColumns = [
            { data: 'name' },
            { data: 'nameEn' },
            { data: 'description' },
            {
                data: 'createAt', render: function (data, type, row) {
                    return convertUTCToLocal(data);
                },
            },
            {
                data: 'roleType',
                orderable: false,
                searchable: false,
                render: function (data, type, row) {
                    if (data == 2) return '';
                    return `<button class="btn btn-primary btn-sm"
                    data-bs-toggle="modal"
                    onclick="updatePermission('${row.id}')"
                    data-bs-target="#UpdatePermission">
                    <i class="tf-icons mdi mdi-cog-outline"></i>
                </button>`;
                }
            }
        ];
        initializeDataTable('RoleList', 'Role', 'Table', tableColumns, '@_localizationManger.Language');
    </script>
}