@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AccountController> Localizer


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/authorization.css" rel="stylesheet" />
    <link href="/dist/images/logo.png" rel="icon" type="image/png" />

    <title>Authorization</title>
</head>
<body>
    <div class='hover'>
        <div class='background'>
            <div class='door'>@Localizer["forbidden"]</div>
            <div class='rug'></div>
        </div>
        <div class='foreground'>
            <div class='bouncer'>
                <div class='head'>
                    <div class='neck'></div>
                    <div class='eye left'></div>
                    <div class='eye right'></div>
                    <div class='ear'></div>
                </div>
                <div class='body'></div>
                <div class='arm'></div>
            </div>
            <div class='poles'>
                <div class='pole left'></div>
                <div class='pole right'></div>
                <div class='rope'></div>
            </div>
        </div>
    </div>

</body>
</html>
